# Supabase Configuration
SUPABASE_URL=https://<project>.supabase.co
SUPABASE_PUBLISHABLE_KEY=your-supabase-publishable-key
SUPABASE_SECRET_KEY=your-supabase-secret-key
SUPABASE_JWKS_URL=https://<project>.supabase.co/auth/v1/keys
JWT_AUDIENCE=authenticated
SUPABASE_STORAGE_BUCKET=audio

# Database direct connection (for local development)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/audiobook_ai?sslmode=disable

# Redis Configuration
REDIS_URL=redis://redis:6379/0
JOBS_PREFIX=audiobooks

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-2.0-flash-exp

# Rev.ai Configuration
REV_AI_API_KEY=your-revai-api-key
REV_AI_URL=https://api.rev.ai/speechtotext/v1

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0

# Web App Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_SUPABASE_URL=https://<project>.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-supabase-publishable-key

# Environment
NODE_ENV=development
