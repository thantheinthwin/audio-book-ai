# Supabase Configuration
SUPABASE_URL=https://<project>.supabase.co
SUPABASE_PUBLISHABLE_KEY=your-supabase-publishable-key
SUPABASE_SECRET_KEY=your-supabase-secret-key
SUPABASE_JWKS_URL=https://<project>.supabase.co/auth/v1/keys
JWT_AUDIENCE=authenticated
SUPABASE_STORAGE_BUCKET=audio

# Database direct connection (optional)
DATABASE_URL=postgres://postgres:<password>@<host>:6543/postgres

# Redis Configuration
REDIS_URL=redis://redis:6379/0
JOBS_PREFIX=audiobooks

# Ollama Configuration
OLLAMA_URL=http://ollama:11434
AI_SUMMARY_MODEL=llama2:7b
AI_EMBED_MODEL=nomic-embed-text

# Whisper Configuration
WHISPER_MODEL=tiny
WHISPER_LANGUAGE=auto

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0

# Web App Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_SUPABASE_URL=https://<project>.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-supabase-publishable-key

# Environment
NODE_ENV=development
